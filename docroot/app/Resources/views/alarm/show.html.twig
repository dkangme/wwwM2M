{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <h1>{%trans%}Alarm definition{%endtrans%}</h1><br/>
    <div class="row">
        <div class="col-sm-5 col-md-5 col-lg-5">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>{%trans%}Expression{%endtrans%}</th>
                        <td>{{ alarm.expression }}</td>
                    </tr>
                    <tr>
                        <th>{%trans%}Last alarm{%endtrans%}</th>
                        <td>{% if alarm.lastalarm %}{{ alarm.lastalarm|date('d-m-Y H:i') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th width="150px">{%trans%}Next alarm interval (minutes){%endtrans%}</th>
                        <td>{{ alarm.nextalarminterval }}</td>
                    </tr>
                    <tr>
                        <th>{%trans%}Alarm level{%endtrans%}</th>
                        <td>
                            {% if alarm.alarmlevel == 0 %}<img src="{{ asset('img/dot_green.png') }}" width="24" height="24"/>{% endif %}
                            {% if alarm.alarmlevel == 1 %}<img src="{{ asset('img/dot_yellow.png') }}" width="24" height="24"/>{% endif %}
                            {% if alarm.alarmlevel == 2 %}<img src="{{ asset('img/dot_orange.png') }}" width="24" height="24"/>{% endif %}
                            {% if alarm.alarmlevel == 3 %}<img src="{{ asset('img/dot_red.png') }}" width="24" height="24"/>{% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>{%trans%}Description{%endtrans%}</th>
                        <td>{{ alarm.description }}</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
  
    <a href="{{ path('data_alarm_index') }}"><i class="fa fa-caret-square-o-left"></i> {%trans%}Back to the list{%endtrans%}</a> &nbsp;&nbsp;&nbsp;&nbsp;
    <a href="{{ path('data_alarm_edit', { 'id': alarm.idalarm }) }}"><i class="fa fa-pencil-square-o"></i> {%trans%}Edit{%endtrans%}</a><br/><br/>
    {{ form_start(delete_form) }}
        <input type="submit" value="{%trans%}Delete{%endtrans%}">
    {{ form_end(delete_form) }}

</div>
{% endblock %}
